    "share_target": {
      "action": "/share/",
      "method": "POST",
      "enctype": "multipart/form-data",
      "params": {
        "title": "title",
        "text": "text",
        "url": "url"
      }
    },
    "protocol_handlers": [
      {
        "protocol": "web+kyrostech",
        "url": "/article/?url=%s"
      }
    ],
    "file_handlers": [
      {
        "action": "/read/",
        "accept": {
          "text/markdown": [".md", ".markdown"],
          "text/plain": [".txt"]
        }
      }
    ],
    "edge_side_panel": {
      "preferred_width": 400
    },
    "launch_handler": {
      "client_mode": "focus-existing"
    },
    "handle_links": "preferred",
    "capture_links": "existing-client-navigate"
  }